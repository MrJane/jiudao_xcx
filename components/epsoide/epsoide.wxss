.container {
    display: inline-flex;
    flex-direction: row;
}
.index_container{
    display: flex;
    flex-direction: row;
  align-items: baseline;  
}
.index {
    font-size: 30px;
    font-weight: 800;
    margin-right: 7px;
}

.plain {
